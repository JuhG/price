{
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.18.2",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "alpinejs": "^3.0.6",
    "axios": "^0.25",
    "laravel-mix": "^6.0.6",
    "lodash": "^4.17.19",
    "postcss": "^8.1.14",
    "postcss-import": "^14.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "bracketSameLine": true,
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "phpVersion": "8.1",
          "tabWidth": 4
        }
      }
    ]
  }
}
